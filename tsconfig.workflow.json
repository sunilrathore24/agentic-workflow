{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/workflow",
    "rootDir": "./src/workflow",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/workflow/**/*"
  ],
  "exclude": [
    "src/app/**/*",
    "src/main.ts",
    "src/polyfills.ts"
  ]
}